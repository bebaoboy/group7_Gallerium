<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/common_setting_header">

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/ui_entries"
            app:entryValues="@array/ui_values"
            app:key="uiKey"
            app:title="@string/ui_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/location_entries"
            app:entryValues="@array/location_values"
            app:key="locationKey"
            app:title="@string/location_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="3"
            app:entries="@array/num_grid_entries"
            app:entryValues="@array/num_grid_values"
            app:key="numGridKey"
            app:title="@string/grid_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/private_header">

        <SwitchPreferenceCompat
            app:key="lockPrivateKey"
            app:title="@string/lock_private_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other_header">

        <SwitchPreferenceCompat
            app:key="lockTrashKey"
            app:title="@string/trash_title" />

    </PreferenceCategory>

</PreferenceScreen>