<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="-20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtAlbumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="5dp"
            android:text="Ngày tháng"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/title_dark"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/albums_recview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:recyclerview_fling_animation_size=".3"
            app:recyclerview_overscroll_animation_size=".3"
            android:nestedScrollingEnabled="false"/>

        <View
            android:id="@+id/category_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black" />
    </LinearLayout>

</LinearLayout>