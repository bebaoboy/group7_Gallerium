<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Group7_PhotoViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/title_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/primary_color_light_20a</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="iconTint">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PhotoCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="PhotoCardImageView" >
        <item name="android:padding">2dp</item>
    </style>


    <style name="Toolbar">
        <item name="android:background">@color/primary_color_dark_bg</item>
        <item name="android:subtitleTextColor">@color/title_dark</item>
        <item name="android:subtitleTextAppearance">@style/ToolbarFont</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/title_dark</item>
        <item name="android:fontFamily">@font/primary_font_extrabold</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="ToolbarTitleMediaView">
        <item name="android:textColor">@color/title_dark</item>
        <item name="android:fontFamily">@font/primary_font</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarFont">
        <item name="android:fontFamily">@font/primary_font_extrabold</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>